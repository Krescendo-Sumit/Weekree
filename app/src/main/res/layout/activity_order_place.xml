<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPlace">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_medium"
                android:padding="5dp"
                android:text="Enter Your Full Name (पूर्ण नाव)" />

            <EditText
                android:id="@+id/et_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_curve_bg"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Enter your full name"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_medium"
                android:padding="5dp"
                android:text="Enter Your Mobile Number (मोबाईल नंबर)" />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_curve_bg"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="mobile number"
                android:inputType="phone"
                android:padding="15dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_medium"
                android:padding="5dp"
                android:text="Enter Email Address (इमेल )" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_curve_bg"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Email "
                android:inputType="textEmailAddress"
                android:padding="15dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_medium"
                android:padding="5dp"
                android:text="Enter Full Address (पूर्ण पत्ता )" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@drawable/edittext_curve_bg"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="start"
                android:hint="Enter Your Detail Address"
                android:inputType="textPostalAddress"
                android:padding="15dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_medium"
                android:padding="5dp"
                android:text="Enter Land Mark (जवळील प्रसिद्ध ठिकाण)" />

            <EditText
                android:id="@+id/et_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_curve_bg"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Land mark"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Payment Options" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_curve_bg">

                <RadioButton
                    android:id="@+id/cod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash On Delivery" />

                <RadioButton
                    android:id="@+id/ol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Online Mode" />

            </RadioGroup>
            <TextView
                android:id="@+id/textView101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/advent_pro_medium"
                android:onClick="place"
                android:shadowColor="#FF5722"
                android:text="Submit Details"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>